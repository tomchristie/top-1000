<link rel="stylesheet" type="text/css" href="//cdn.mainichi.jp/vol1/contents/olympic/tokyo2020/css/roadtotokyo.css" charset="UTF-8">
<script src="//cdn.mainichi.jp/vol1/contents/olympic/tokyo2020/js/script-roadtokyo.js" charset="UTF-8"></script>

<script>
$(function () {
  // 注目の選手（#players-slider）スライダー
  if($('#players-slider').length > 0){
    var featurelistCount = $('#players-slider .featurelist > li').length;
    var featurelistW = (300 * featurelistCount) + (24 * (featurelistCount - 1));
    $('#players-slider .featurelist-slider').width(featurelistW);
    $('#players-slider .featurelist-button-prev').hide();//初期状態ではprev非表示
    if(featurelistCount < 4){//4box以下ではnextも初期非表示
      $('#players-slider .featurelist-button-next').hide();
    }
    //次へクリック
    $('#players-slider .featurelist-button-next').click(function(){
      var moveAmount = featurelistW - 1200;
      $('#players-slider .featurelist').css('transform','translateX(-' + moveAmount + 'px)');
      $('#players-slider .featurelist-button-next').hide();
      $('#players-slider .featurelist-button-prev').show();
    });
    //前へクリック
    $('#players-slider .featurelist-button-prev').click(function(){
      $('#players-slider .featurelist').css('transform','translateX(0px)');
      $('#players-slider .featurelist-button-prev').hide();
      $('#players-slider .featurelist-button-next').show();
    });
  }
})
</script>

