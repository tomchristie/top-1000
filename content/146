  <script>
    $(function() {
      $.ajax({
        url: '/updates/status/pickup.json',
        type: 'GET',
        dataType: 'json',
      }).done(function(pickupJson) {
        let itemsHtml = '';
        pickupJson.forEach(function(item, index) {
          const itemHtml =
            '<div class="img-slider">' +
              '<a href="' + item.blog_url + '" target="_blank">' +
                '<div class="slider-filter">' +
                  '<img src="' + item.image_path + '" alt="' + item.blog_name + '">' +
                '</div>' +
              '</a>' +
              '<div class="slide-caption">' +
                '<p>' + item.blog_name + '<br><span>' + item.caption + '</span></p>' +
              '</div>' +
            '</div>';
          itemsHtml += itemHtml;
        });
        $('#top-slider-wrap').append(itemsHtml);
        $('.top-slider-wrap').slick({
          autoplay: true,
          autoplaySpeed: 5000,
          infinite: true,
          dots: false,
          centerMode: true,
          slidesToShow: 1,
          centerPadding: "0",
          variableWidth: true,
          responsive: [
            {
              breakpoint: 768,
              settings: {
                centerPadding: '20px',
                variableWidth: false
              }
            }
          ]
        });
      });

      $.ajax({
        url: '/updates/status/updates.json',
        type: 'GET',
        dataType: 'json',
      }).done(function(updatesJson) {
        let itemsHtml = '';
        updatesJson.forEach(function(item, index) {
          const itemHtml =
            '<li class="news">' +
              '<p class="txt"><a href="' + item.link + '" target="_blank">' + item.title + ': ' + item.publisher + '</a></p>' +
            '</li>';
          itemsHtml += itemHtml;
        });
        $('#newsticker-ul').append(itemsHtml);
        $.simpleTicker($('#newsticker'), {effectType:'slide'});
      });

      $.ajax({
        url: '/updates/status/blog_ranking_s.json',
        type: 'GET',
        dataType: 'json',
      }).done(function(blogRankingJson) {
        blogRanking = blogRankingJson.filter(item => item !== null);

        let itemsHtml = '';
        blogRanking.forEach(function(item, index) {
          const rank = index + 1;
          const itemHtml =
            '<div class="article">' +
              '<a href="' + item.blog_url + '" target="_blank">' +
                '<p class="number">' + rank + '</p>' +
                '<div class="img"><img src="' + item.blog_latest_image_url + '"></div>' +
                '<div class="grid">' +
                  '<p class="ranking-txt">' + item.blog_name + '</p>' +
                  // <p class="date">...</p>
                '</div>' +
              '</a>' +
            '</div>';
          itemsHtml += itemHtml;
        });
        itemsHtml += '<div class="more-link"><a href="/ranking/">もっと見る</a></div>';

        $('#right-ranking-box').append(itemsHtml);
      });

      $.ajax({
        url: '/updates/status/entry_ranking_s.json',
        type: 'GET',
        dataType: 'json',
      }).done(function(entryRankingJson) {
        entryRanking = entryRankingJson.filter(item => item !== null);

        let itemsHtml = '';
        entryRanking.forEach(function(item, index) {
          const rank = index + 1;

          const itemHtml =
            '<div class="article">' +
              '<a href="' + item.blog_pc_url + '" target="_blank">' +
                '<p class="number">' + rank + '</p>' +
                '<div class="img"><img src="' + item.blog_entry_image_url + '"></div>' +  // /common/images/no-image.png
                '<div class="grid">' +
                  '<p class="ranking-txt">' + item.blog_and_entry_name + '</p>' +
                  // <p class="date">...</p>' +
                '</div>' +
              '</a>' +
            '</div>';
          itemsHtml += itemHtml;
        });
        itemsHtml += '<div class="more-link"><a href="/most_read/">もっと見る</a></div>';

        $('#left-ranking-box').append(itemsHtml);
      });

      let categoryLinkHtml = '';
      let categoryNumber = 0;
      CATEGORIES.forEach(function(cg, index1) {
        cg[1].forEach(function(category, index2) {
          categoryNumber += 1;
          categoryLinkHtml += '<li><a href="/category/#anc' + categoryNumber + '">' + category + '</a></li>';
        });
      });
      $('#category-link-ul').append(categoryLinkHtml);
      $('.category-link').slick({
        arrows: false,
        autoplay: true,
        autoplaySpeed: 0,
        cssEase: 'linear',
        speed: 5000,
        slidesToShow: 7,
        slidesToScroll: 1,
        variableWidth: true,
        responsive: [
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 3,
              speed: 4500,
              centerPadding: '20px',
              variableWidth: false
            },
            breakpoint: 500,
            settings: {
              slidesToShow: 2,
            }
          }
        ]
      });

      $.ajax({
        url: '/updates/status/nifty_news.json',
        type: 'GET',
        dataType: 'json',
      }).done(function(niftyNewsJson) {
        let box = $('#neta-left-ranking-box');
        niftyNewsJson.forEach(function(item, index) {
          if (index == 5) {
            box = $('#neta-right-ranking-box');
          }

          const number = index + 1;
          const trendIcon =
            item.ranking_trend == 0 ? '/common/images/icon-new.png'  :
            item.ranking_trend == 1 ? '/common/images/icon-up.png'   :
            item.ranking_trend == 2 ? '/common/images/icon-down.png' :
            item.ranking_trend == 3 ? '' :  // stay
                                      '';
          const trendIconTag =
            trendIcon != '' ? '<p class="icon"><img src="' + trendIcon + '"></p>' :
                              '';
          const itemHtml =
            '<div class="article">' +
              '<p class="number">' + number + '</p>' +
              '<p class="txt"><a href="' + item.link + '">' + item.title + '</a></p>' +
              trendIconTag +
            '</div>';
          box.append(itemHtml);
        });
      });

      $.ajax({
        url: '/updates/status/banner_ad.json',
        type: 'GET',
        dataType: 'json',
      }).done(function(bannerAd) {
        const bannerAdHtml = 
          '<a href="' + bannerAd.url + '"><img src="' + bannerAd.image + '" alt="' + bannerAd.alt + '"></a>';
        $('#banner-area-inner-img').append(bannerAdHtml);
      });

      $.ajax({
        url: '/updates/status/info-nifty.json',
        type: 'GET',
        dataType: 'json',
      }).done(function(infoNiftyJson) {
        let itemsHtml = '';
        infoNiftyJson.slice(0,3).forEach(function(item, index) {
          const itemHtml = 
            '<div class="notice-list">' +
              '<p class="date">' + item.date + '</p>' +
              '<p class="txt"><a href="' + item.link + '">' + item.title + '</a></p>' +
            '</div>';
          itemsHtml += itemHtml;
        });
        $('#notice-list-wrap').append(itemsHtml);
      });
    });
  </script>

