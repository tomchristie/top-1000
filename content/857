player.accessor.addEventListener("landing", function (){
// IE8以下でindexof使用不可
if(uaArr[0] === ua.uaObj.uaBrouser ||
uaArr[1] === ua.uaObj.uaBrouser ||
uaArr[2] === ua.uaObj.uaBrouser ||
uaArr[3] === ua.uaObj.uaBrouser
){
return;
