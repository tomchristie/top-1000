$firstVideo.setAttribute('src',topGif)
$([$movie[0], $btn[0]]).addClass('is-active');
}, 400);

setTimeout(function() {
// PCの場合
 if(ua.uaObj.uaDevice === 'device-pc' ) player.accessor.play();
$stopBtn.stop(true,true).show(600);
$firstVideoWrapper.stop(true,true).fadeOut(600, function() {
init();
});
}, 1800);

} //end if

function init() {

$stopBtn.addClass('is-movie-01');
duration = player.accessor.getTotalTime();
player.accessor.addEventListener("change_state", state);

// 個人ボタンhover時
$btn.on('mouseenter', function() {
playerState = state();
if ( w < bkPoint ) return;
if(playerState !== 'playing' && !playFlg && w > bkPoint){
player.accessor.setCurrentTime(0);
play();
}
});

// 法人ボタンhover時
$btn2.on('mouseenter', function() {
playerState = state();
if(playerState !== 'playing' || w < bkPoint) return;
stop();
changeMovie();
});

$stopBtn.on('click', function() {
if(w < bkPoint ) return;
if($movie.hasClass('is-active')){
if(!$stopBtn.hasClass('js-state-stop')) {
$stopBtn.attr({ 'src': $stopBtn.attr('src').replace('stop', 'play'), 'alt': '再生' });
$stopBtn.addClass('js-state-stop');
}else{
$stopBtn.attr({ 'src': $stopBtn.attr('src').replace('play', 'stop'), 'alt': '停止' });
$stopBtn.removeClass('js-state-stop');
}
}

playerState = state();

if(playerState !== 'playing' && $movie.hasClass('is-active') ){
play();
}else{
stop();
}
});

$(window).on('resize', function() {
playerState = state();
if(playerState === 'playing' && bkPoint > w) {
stop();
}else if(($btn.hasClass('is-active') || !$btn2.hasClass('is-active')) && bkPoint < w){
$firstVideoWrapper.hide();
play();
}
});
}


});
// end landing

function state() {
var time;
player.accessor.addEventListener("progress", function (e) {
time = player.accessor.getCurrentTime();
// gif animation
if(time > 21 && time < 21.5 && endAnimFlg) {
endAnimationView();
}else if (time > 23.2 && !endAnimFlg){
endAnimationHide();
}
});

if($stopBtn.hasClass('js-state-stop')) {
playFlg = true;
}else{
playFlg = false;
}
var state = player.accessor.state;

switch (state) {
// 再生完了
case ("complete") :
play();
break;

default:
return  state;
break;
}
}

// 最後に流れるGifを表示
function endAnimationView() {

$endAnim.attr('src', endAnimDataSrc ).css({'opacity': 1});
endAnimFlg = false;
}

// 最後に流れるGifを非表示
function endAnimationHide() {
$endAnim.attr('src', endAnimSrc ).css({'opacity': 0});
endAnimFlg = true;
}

// 個人動画再生
function play() {
if(playFlg) return;
player.accessor.play();
$([$movie[0], $btn[0]]).addClass('is-active');
$stopBtn.addClass('is-movie-01');
$stopBtn.removeClass('is-movie-02');
}

// 個人動画停止
function stop() {
player.accessor.pause();
}

// 動画切り替え
function changeMovie() {
$btn.removeClass('is-active')
$endAnim.attr('src', endAnimSrc ).css({'opacity': 0});
endAnimFlg = true;
setTimeout(function() {
$movie.removeClass('is-active')
},150)
}
}());
