			document.cookie = "CmProvid=" + prov_abbr + ";path=/;domain=10086.cn;expires=" + exp.toGMTString();
	
			gourl = "/index/" + prov_abbr + "/index_" + prov_id + "_" + city_id + ".html";
		}
		else {
			strpc = getCurrLocationByIp();
				
