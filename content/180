		strpc = getCurrLocationByCookie(); // 返回cookie中的location字符串，如果不存在则返回null。
		
		if (strpc != null) {
		    arrstrpc = strpc.split("|");
		    if (2 <= arrstrpc.length) {
		    	prov_id = arrstrpc[0];
				city_id = arrstrpc[1];
				
			    for (var i=0;i<provincesJson.length;i++) {
			    	if (provincesJson[i].code == prov_id) {
			    		prov_abbr = provincesJson[i].abbr;
			    		break;
			    	}
			    }
		    }
		}
		if (2 <= prov_abbr.length) {
	
			var exp = new Date();
			exp.setTime(exp.getTime() + 90*24*60*60*1000);
