	// 执行跳转操作
	var args = window.location.search; // 搜索字符串
	var target = window.location.hash; // 锚点
	
	//判断访问来源
	var flag = false;
	if(document.referrer.indexOf("wap.10086.cn") >= 0 || document.referrer.indexOf("touch.10086.cn") >= 0){
		flag = true;
	}
	if (!flag && !is_iPad() && navigator.userAgent.match(/(phone|pod|iPhone|iPod|ios|Android|Mobile|BlackBerry|IEMobile|MQQBrowser|JUC|Fennec|wOSBrowser|BrowserNG|WebOS|Symbian|Windows Phone)/i)) {
		window.location.href = "http://wap.10086.cn"+ args + target;
		//window.location.href = gourl + args + target;
	}
	else {
		window.location.href = gourl + args + target;
	}
	
	//判断IPAD端
	function is_iPad(){ 
		var ua = navigator.userAgent.toLowerCase(); 
		if(ua.match(/iPad/i)=="ipad") { 
		   return true; 
		} else { 
		   return false; 
		} 
	}

